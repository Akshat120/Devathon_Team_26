<%- include('includes/header.ejs') %>
    <link rel="stylesheet" href="/authpage.css">
    <style>
        html,
        body {
            display: flex;
            justify-content: center;
            font-family: Roboto, Arial, sans-serif;
            font-size: 15px;
        }
        
        form {
            border: 5px solid #f1f1f1;
        }
        
        input[type=text],
        input[type=password] {
            width: 100%;
            padding: 16px 8px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }
        
        .icon {
            font-size: 110px;
            display: flex;
            justify-content: center;
            color: #4286f4;
        }
        
        .form-field button {
            background-color: #4286f4;
            color: white;
            padding: 14px 0;
            margin: 10px 0;
            border: none;
            cursor: grab;
            width: 48%;
        }
        
        h1 {
            text-align: center;
            font-size: 18;
        }
        
        .form-field button:hover {
            opacity: 0.8;
        }
        
        .formcontainer {
            text-align: center;
            margin: 24px 50px 12px;
        }
        
        .container {
            padding: 16px 0;
            text-align: left;
        }
        
        span.psw {
            float: right;
            padding-top: 0;
            padding-right: 15px;
        }
    </style>
    </head>

    <body>
        <div class="header">
            <h2 class="display-4 align-center">Student Scholarship</h2>
        </div>

        <div class="form-container">
            <div>
                <div class="options">
                    <div class="inner-option register">
                        <a href="registerpage">Register</a>
                    </div>
                    <div class="inner-option login">
                        <a href="/">Login</a>
                    </div>
                </div>
                <form action="/login" method="POST">
                    <h1>Login</h1>
                    <div class="icon">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="formcontainer">
                        <div class="form-field container">
                            <label for="uname"><strong>Username</strong></label>
                            <input class="useremail1" type="text" id="useremail" placeholder="name_regno" name="uname" size="12px">
                            <input class="useremail2" type="text" value="@student.nitw.ac.in" disabled>
                            <label for="psw"><strong>Password</strong></label>
                            <input class="password" type="password" id="userpassword" placeholder="password" name="psw">
                        </div>
                        <button class="btn btn-primary "><strong>Login</strong></button>
                        <div class="container" style="background-color: #eee">
                            <label style="padding-left: 15px">
                                <input type="checkbox"  checked="checked" name="remember"> Remember me
                            </label>
                            <span class="psw"><a href="#">Forgot password?</a></span>
                        </div>
                </form>
                </div>
            </div>

    </body>
    <%- include('includes/footer.ejs') %>
